<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_with_color_overlay">

			<RelativeLayout
				android:id="@+id/page_receipt_ek1"
				android:layout_marginTop="0dp"
				android:layout_marginStart="0dp"
				android:layout_width="match_parent"
				android:layout_height="match_parent">

				<View
					android:id="@+id/rectangle_93"
					android:layout_width="334dp"
					android:layout_height="46dp"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"
					android:layout_marginStart="50dp"
					android:layout_marginTop="34dp"
					android:layout_marginEnd="50dp"
					android:background="@drawable/rectangle_93_shape" />

				<TextView
					android:id="@+id/receipt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignStart="@+id/rectangle_93"
					android:layout_alignEnd="@+id/rectangle_93"
					android:layout_alignBottom="@+id/rectangle_93"
					android:layout_marginStart="85dp"
					android:layout_marginTop="291dp"
					android:layout_marginEnd="76dp"
					android:layout_marginBottom="6dp"
					android:text="Receipt"
					android:textColor="@drawable/_bg__slash_page_4_ek2_shape"
					android:textSize="25sp" />


				<TableLayout
					android:id="@+id/upper_table"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentStart="true"
					android:layout_alignParentTop="true"
					android:layout_alignParentEnd="true"
					android:layout_marginStart="20dp"
					android:layout_marginTop="100dp"
					android:layout_marginEnd="20dp"
					android:background="@drawable/_bg____drop__ek2_shape"
					android:stretchColumns="1,2,3">

					<!-- Header Row -->
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#000000" />
					<TableRow>

						<TextView
							android:padding="8dp"
							android:text="Part Name"
							android:textStyle="bold" />

						<TextView
							android:padding="8dp"
							android:text="Price"
							android:textStyle="bold" />

						<TextView
							android:padding="8dp"
							android:text="Remarks"
							android:textStyle="bold" />
					</TableRow>
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#0B0A0A" />

					<!-- Sample Data Row -->
					<TableRow>

						<TextView
							android:padding="8dp"
							android:text="Engine Oil" />

						<TextView
							android:padding="8dp"
							android:text="$50" />

						<TextView
							android:padding="8dp"
							android:text="Regular servicing" />
					</TableRow>
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#000000" />
					<TableRow>

						<TextView
							android:padding="8dp"
							android:text="Brake" />

						<TextView
							android:padding="8dp"
							android:text="$50" />

						<TextView
							android:padding="8dp"
							android:text="Regular servicing" />
					</TableRow>
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#000000" />
					<TableRow>

						<TextView
							android:padding="8dp"
							android:text="Total" />

						<TextView
							android:padding="8dp"
							android:text="$100" />

						<TextView
							android:padding="8dp"
							android:text="payment" />
					</TableRow>
					<View
						android:layout_width="match_parent"
						android:layout_height="1dp"
						android:background="#000000" />

					<!-- Add more rows programmatically as needed -->

				</TableLayout>

				<Button
					android:id="@+id/btn_pay"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_below="@+id/upper_table"
					android:layout_alignParentStart="true"
					android:layout_alignParentEnd="true"
					android:layout_marginStart="300dp"
					android:layout_marginTop="34dp"
					android:layout_marginEnd="20dp"
					android:text="PAY" />

			</RelativeLayout>
</FrameLayout>