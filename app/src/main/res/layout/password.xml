<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:background="@drawable/_bg__password_ek2_shape">

	<ScrollView android:id="@+id/password"
		android:layout_width="wrap_content"
		android:layout_height="match_parent" >

		<RelativeLayout android:id="@+id/content_container"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" >









			<ImageView
				android:id="@+id/ellipse_4"
				android:layout_width="match_parent"
				android:layout_height="475dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:layout_marginStart="-72dp"
				android:layout_marginTop="406dp"
				android:layout_marginEnd="-54dp"
				android:contentDescription="ellipse_4"
				android:scaleType="fitXY"
				android:src="@drawable/ellipse_4" />

			<TextView android:id="@+id/forgot_password__"
						android:textSize="14sp"
						android:textColor="@color/forgot_password___color"
						android:layout_marginStart="18dp"
						android:layout_marginTop="206dp"
						android:layout_width="146dp"
						android:layout_height="31dp"
						android:text="@string/forgot_password___string"
						 />

					<View   android:id="@+id/line_14"
						android:background="@drawable/line_14_shape"
						 android:layout_marginStart="13dp"
						android:layout_marginTop="196dp"
						android:layout_width="334dp"
						android:layout_height="1dp" />

					<EditText android:id="@+id/password_ek3"


						android:textSize="22sp"
						android:hint="Password"
						android:layout_width="350dp"
						android:layout_height="48dp"
						android:layout_centerHorizontal="true"
						android:layout_marginStart="61dp"
						android:layout_marginTop="155dp"
						android:inputType="text"

						 />

					<TextView android:id="@+id/enter_your_password_for_login"

						android:textSize="23sp"
						android:textColor="@color/rectangle_1_color"
						android:layout_marginStart="13dp"
						android:layout_marginTop="106dp"
						android:layout_width="362.5dp"
						android:layout_height="51.5dp"
						android:text="@string/enter_your_password_for_login_string"
						 />

				</RelativeLayout>
















	</ScrollView>
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp">

		<Button
			android:id="@+id/login"
			android:layout_width="164dp"
			android:layout_height="52dp"
			android:layout_centerHorizontal="true"
			android:layout_marginStart="61dp"
			android:background="@drawable/_rectangle_30_ek1_shape"
			android:text="login" />
	</RelativeLayout>
</FrameLayout>