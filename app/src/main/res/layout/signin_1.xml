<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/bg_with_color_overlay"
	>

	<ScrollView
		android:id="@+id/signin_1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>

		<RelativeLayout
			android:id="@+id/page_signin_1_ek1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="0dp"
			android:layout_marginStart="0dp">

			<ImageView
				android:id="@+id/ellipse_2"
				android:layout_width="505dp"
				android:layout_height="475dp"
				android:layout_alignParentTop="true"
				android:layout_centerHorizontal="true"
				android:layout_marginStart="-72dp"
				android:layout_marginTop="406dp"
				android:layout_marginEnd="-54dp"
				android:contentDescription="ellipse_2"
				android:scaleType="fitXY"
				android:src="@drawable/ellipse_2" />

			<TextView
				android:id="@+id/terms_and_conditions___privacy_policy_ek1"
				android:layout_width="280dp"
				android:layout_height="31dp"
				android:layout_marginStart="44dp"
				android:layout_marginTop="644dp"
				android:gravity="center"
				android:text="@string/terms_and_conditions___privacy_policy_ek1_string"
				android:textColor="@color/_bg__status_of_vehicles_ek2_color"
				android:textSize="14sp" />

			<TextView
				android:id="@+id/use_mobile_number_instead"
				android:layout_width="214dp"
				android:layout_height="30dp"
				android:layout_marginStart="161dp"
				android:layout_marginTop="266dp"
				android:text="Use Phone Instead!"
				android:textColor="@color/black"
				android:textSize="16sp" />

			<ImageView
				android:id="@+id/line_13_ek1"
				android:layout_width="308dp"
				android:layout_height="1dp"
				android:layout_marginStart="30dp"
				android:layout_marginTop="261dp"
				android:src="@drawable/line_13_ek1"
				android:contentDescription="line_13_ek1" />

			<EditText
				android:id="@+id/email_address"
				android:layout_width="350dp"
				android:layout_height="48dp"
				android:layout_centerHorizontal="true"
				android:layout_marginStart="61dp"
				android:layout_marginTop="220dp"
				android:hint="@string/email_address_string"
				android:inputType="text"
				android:textColor="@color/black"
				android:textSize="22sp" />

			<TextView
				android:id="@+id/proceed_with_your_email"
				android:layout_width="274dp"
				android:layout_height="46dp"
				android:layout_marginStart="58dp"
				android:layout_marginTop="139dp"
				android:layout_centerHorizontal="true"

				android:text="@string/proceed_with_your_email_string"
				android:textColor="@color/rectangle_1_color"
				android:textSize="20sp" />

			<ImageView
				android:id="@+id/_back_arrow_ek4"
				android:layout_width="39dp"
				android:layout_height="45dp"
				android:layout_marginStart="11dp"
				android:layout_marginTop="60dp"
				android:src="@drawable/_back_arrow_ek4"
				android:contentDescription="_back_arrow_ek4" />
		</RelativeLayout>
	</ScrollView>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|center_horizontal"
		android:layout_marginStart="20dp"
		android:layout_marginEnd="20dp">

		<Button
			android:id="@+id/next"
			android:layout_width="164dp"
			android:layout_height="52dp"
			android:layout_centerHorizontal="true"
			android:layout_marginStart="61dp"
			android:background="@drawable/_rectangle_30_ek1_shape"
			android:text="NEXT" />
	</RelativeLayout>
</FrameLayout>
